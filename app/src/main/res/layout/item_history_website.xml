<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/history_item_root_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/history_item_img_fav"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginLeft="20dp"
            android:src="@drawable/ic_globe"
            android:scaleType="fitXY" />

        <LinearLayout
            android:layout_width="241dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@id/history_item_img_fav"
            android:orientation="vertical">

            <TextView
                android:id="@+id/history_item_text_main"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="@color/colorDownloadText"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/history_item_text_secondary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="@color/colorDownloadSubText"
                android:textSize="12sp" />
        </LinearLayout>

        <ImageButton
            android:id="@+id/history_item_btn_more"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="12dp"
            android:background="@null"
            android:scaleType="fitXY"
            android:src="@drawable/action_menu" />

    </RelativeLayout>
</RelativeLayout>


